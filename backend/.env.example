# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost
API_PREFIX=/api

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=pharma_prep
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0
DB_CONNECT_TIMEOUT=10000
DB_ACQUIRE_TIMEOUT=10000
DB_TIMEOUT=10000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_chars
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_RESET_PASSWORD_EXPIRATION=10m
JWT_VERIFY_EMAIL_EXPIRATION=24h

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@example.com

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload
UPLOAD_LIMIT=10mb
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Redis Configuration (Optional)
# Use either REDIS_URL or individual connection parameters
# REDIS_URL=redis://username:password@host:port
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# WebSocket Configuration
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=10000
WS_HEARTBEAT_INTERVAL=30000
WS_STALE_TIMEOUT=60000
WS_STALE_CHECK_INTERVAL=30000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE

# Other configurations can be added here as needed 